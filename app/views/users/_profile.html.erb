<div class="profile">
  <div class="left-profile">
    <%= image_tag "profile-icon.png", class: "profile-img" %>
  </div>
  <div class="middle-profile">
    <p><%= current_user.name %></p>
    <%= button_to "ごはんを記録する", new_menu_path, method: :get, class: "post" %>
  </div>
  <% if current_user.email != "test@condate.com" %>
    <div class="right-profile">
      <%= link_to image_tag("config.png", class: "edit-profile"), edit_user_path(current_user) %>
    </div>
  <% end %>
</div>