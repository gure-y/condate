<%= render "shared/header" %>

<main class="mypage">
  <%= render "profile" %>
  <ul class="change-lists">
    <li class="now-list">
      <%= link_to "ごはんリスト", user_path(current_user), class: "gohan-list-now" %>
    </li>
    <li class="list">
      <%= link_to "ブックマークリスト", bookmarks_users_path, class: "bookmark-list" %>
    </li>
  </ul>
  <div class="menu-lists">
    <% @menu.reverse_each do |menu| %>
      <div class="menu">
        <%= link_to menu_path(menu) do %>
          <%= image_tag menu.image.variant(combine_options:{gravity: :center, resize:"640x640^", crop:"640x640+0+0"}).processed, class:"menu-img" %>
          <div class="menu-body">
            <div class="menu-title">
              <%= menu.title %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>    
</main>