<%= render "shared/header" %>

<main class="main">
  <div class="upper-content">
    <div class="today">
      今日のごはん決めた？
    </div>
    <div class="yes-or-yet">
      <div class="left-icon">
        <%= link_to "決めた！", praise_menus_path, class: "yes" %>
      </div>
      <div class="right-icon">
        <%= link_to "まだ", refrigerators_path, class: "yet" %>
      </div>
    </div>
  </div>


  <div class="middle-content">
    <%= link_to "みんなのごはんを全部見る➡︎", menus_path, class: "to-index" %>
  </div>

  <div class="bottom-content">
    <div class="menu-lists">
      <% @menus.each do |menu| %>
        <div class="menu">
          <%= link_to menu_path(menu) do %>
            <%= image_tag menu.image, class:"menu-img" %>
            
            <div class="menu-body">
              <div class="menu-title">
                <%= menu.title %>
              </div>
              <div id="bookmark_<%= menu.id %>", class="bookmark-icon">
                <%= render partial: "bookmarks/bookmark", locals: { menu: menu } %>
              </div>
            </div>

          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</main>