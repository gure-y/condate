<main class="main">
  <div class="inner">
    <h1 class="page-heading">condate!みんなのごはん</h1>
    <%= link_to "投稿する？", new_menu_path %>
    <%= link_to "マイページ", user_path(current_user) %> 

    <div class="card__wrapper">
      <% @menus.each do |menu| %>
        <%= link_to menu_path(menu) do %>
          <div class="card">
            <%= image_tag menu.image.variant(resize:'200x200'), class:"card__img" %>
            <% end %>
            <div class="card__body">
              <h2 class="card__title"><%= menu.title %></h2>
              <p class="card__summary">
                <%= menu.url %>
              </p>

            <div id="bookmark_<%= menu.id %>">
              <%= render partial: "bookmarks/bookmark", locals: { menu: menu } %>
            </div>

            </div>
          </div>
      <% end %>
    </div>
  </div>
</main>