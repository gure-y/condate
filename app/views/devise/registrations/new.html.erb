<%= render "shared/header" %>

<div class="account-page">
  <div class="account-page-title">
    新規登録
  </div>
  
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
    <%= render 'shared/error_messages', model: f.object %>
    <div class="account-page-form">
      <div class='field'>
        <%= f.label "お名前" %>
        <%= f.text_field :name, autofocus: true, class: 'field-input'%>
      </div>
      <div class='field'>
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, class: 'field-input'%>
      </div>
      <div class='field'>
        <%= f.label "パスワード（英数字8文字以上）" %>
        <%= f.password_field :password, autocomplete: "off", class: 'field-input'%>
      </div>
      <div class='field'>
        <%= f.label "パスワード（確認用）" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'field-input'%>
      </div>
      <div>
        <%= f.submit "登録する", class: 'btn'%>
      </div>
      <div class='actions'>
        アカウントをお持ちの方はこちら
        <%= link_to "ログイン", new_user_session_path, class: "here" %>
      </div>
    </div>
  <% end %>
</div>