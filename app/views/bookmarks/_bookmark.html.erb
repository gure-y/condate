<% if user_signed_in? %>
  <% if menu.bookmarked_by?(current_user) %> 
      <%=button_to menu_bookmarks_path(menu), method: :delete, remote: true do %>
        <%= image_tag "icon_red_heart.png", :size =>'30x30' %>
      <% end %>
  <% else %>
      <%=button_to menu_bookmarks_path(menu), method: :post, remote: true do %>
        <%= image_tag "icon_heart.png", :size =>'30x30' %>
      <% end %>
  <% end %>
<% else %>
  <%= image_tag "icon_heart.png", :size =>'30x30' %>
<% end %>