<% if user_signed_in? %>
  <% if menu.bookmarked_by?(current_user) %> 
      <%=button_to "ブクマ解除", menu_bookmarks_path(menu), method: :delete, remote: true %>
  <% else %>
      <%=button_to "ブクマ", menu_bookmarks_path(menu), method: :post, remote: true %>
  <% end %>
<% else %>
  <p><span>お気に入り数: </span><%= menu.bookmarks.count %></p>
<% end %>