<% if user_signed_in? %>
  <% if menu.bookmarked_by?(current_user) %> 
      <%=button_to menu_bookmarks_path(menu), method: :delete, remote: true, class: "bookmark-btn" do %>
        <%= image_tag "orange_bookmark.png", class: "bookmark-icon" %>
      <% end %>
  <% else %>
      <%=button_to menu_bookmarks_path(menu), method: :post, remote: true, class: "bookmark-btn" do %>
        <%= image_tag "bookmark.png", class: "bookmark-icon" %>
      <% end %>
  <% end %>
<% else %>
  <%= image_tag "bookmark.png", class: "bookmark-icon" %>
<% end %>